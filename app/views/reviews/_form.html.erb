<%= form_for(@reiview)  do |f| %>
   <div class="field">
    <%= f.label :Author %><br>
    <%= f.text_field :author %>
  </div>
 
   <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
   <div class="field">
    <%= f.label :Content %><br>
   <%= f.text_area :content, :class => "tinymce", :rows => 10, :cols => 120 %>
  </div>
<%= f.hidden_field :product_id, value: product_id %>
   <div class="field">
   <%= f.label :rating %><br>
   <%= f.select :rating, ((0..10)) %>
  </div>
  
  <div class="actions">
    <%= f.submit  %>
  </div>

<% end %>
